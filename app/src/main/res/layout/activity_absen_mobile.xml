<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".absen_mobile">

        <TextView
            android:id="@+id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:text="nomor"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:text="lokasi"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
        <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:text="Hari Ini"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        />
        <TextView
            android:id="@+id/keteranganhadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:text="keteranganhadir"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:text="00:00:00"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="long"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="lat"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

    <Button
        android:id="@+id/buttonmasuk"
        android:layout_width = "160dp"
        android:layout_height = "160dp"
        android:layout_centerHorizontal="true"
        android:text="Scan In"
        android:visibility="gone"
        android:textAllCaps="false"
        android:background="@drawable/backgroundbutton"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/buttonkeluar"
        android:layout_width = "160dp"
        android:layout_height = "160dp"
        android:layout_centerHorizontal="true"
        android:text="Scan Out"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/borderbutton"
        android:layout_marginTop="24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="#0F4C81"
        android:textSize="32dp"
        android:layout_gravity="center"
        />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"/>
</LinearLayout>
