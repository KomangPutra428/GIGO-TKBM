<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/relative_header"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/wrapper_wave">

            <LinearLayout
                android:id="@+id/time"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_gravity="center"
                        android:layout_height="48dp"
                        android:src="@drawable/clock"/>

                    <TextView
                        android:id="@+id/jam"
                        android:layout_marginLeft="8dp"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00:00"
                        android:textColor="#FFFF"
                        android:textStyle="bold"
                        android:textSize="48sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/depotanggal"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Depo, Kelapa Dua â€¢ Jumat, 07 Juli 2023"
                    android:gravity="center"
                    android:textColor="#FFFF"
                    android:textSize="16sp" />



            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/biodata"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/biodata" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_greeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_marginBottom="5dp"
                            android:text="Selamat pagi,"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/text_day_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_marginBottom="5dp"
                            android:text="Senin, 3 April 2023"
                            android:textColor="#FFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_nama"
                            android:textAllCaps="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="12dp"
                            android:text="Nama"
                            android:textColor="#FFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_jabatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:text="jabatan"
                            android:textColor="#FFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_nik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:text="1300000600"
                            android:textColor="#FFFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/refresh"
            app:cardCornerRadius="10dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_below="@+id/relative_header"
            app:strokeWidth="2sp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="#EDF7FF"
            app:strokeColor="#AFC3D5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/info_2"/>
                <TextView
                    android:layout_toLeftOf="@+id/refresh"
                    android:textColor="#0F4C81"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap tombol Masuk/Pulang sesuai jadwal shift karyawan."/>
            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/refresh2"
            app:cardCornerRadius="10dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/relative_header"
            app:strokeWidth="2sp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="#EDF7FF"
            app:strokeColor="#AFC3D5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/info_2"/>
                <TextView
                    android:textColor="#0F4C81"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantau aktivitas kehadiran Anda melalui aplikasi GIGO."/>
            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/widget"
            android:layout_below="@+id/shifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="#404040"
            android:layout_marginLeft="14sp"
            android:text="Widget"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detailabsen"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget"
            android:clickable="true"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#0F4C81"
                        android:text="Absen Hari Ini" />
                    <TextView
                        android:id="@+id/harisekarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absen Mulai Kerja"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0F4C81"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EDF7FF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp">

                    <!-- Media -->

                    <ImageView
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_check_in" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHECK-IN"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#0A0A0A"/>
                        <TextView
                            android:id="@+id/minimumF1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scheduled : 08.00"
                            android:textSize="14sp"
                            android:textColor="#616161"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check in at  :"
                                android:textSize="14sp"
                                android:textColor="#616161"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/checkin"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_height="wrap_content"
                                app:chipStrokeColor="#AFC3D5"
                                app:chipStrokeWidth="3dp"
                                app:chipBackgroundColor="#EDF7FF"
                                android:textColor="#0F4C81"
                                app:chipCornerRadius="5dp"
                                android:text="07:25:00"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp">

                    <!-- Media -->

                    <ImageView
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_check_out" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHECK-OUT"
                            android:textColor="#0A0A0A"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/minimumF4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scheduled : 08.00"
                            android:textSize="14sp"
                            android:textColor="#616161"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check out at  :"
                                android:textSize="14sp"
                                android:textColor="#616161"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/checkout"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_height="wrap_content"
                                app:chipStrokeColor="#AFC3D5"
                                android:textSize="14sp"
                                app:chipStrokeWidth="3dp"
                                app:chipBackgroundColor="#EDF7FF"
                                android:textColor="#0F4C81"
                                app:chipCornerRadius="5dp"
                                android:text="07:25:00"/>


                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>





            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textlist"
            android:layout_below="@+id/refresh2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="#404040"
            android:layout_marginLeft="14sp"
            android:text="List Menu"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rekapabsensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textlist"
            android:clickable="true"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Media -->

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/work_history" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rekap Absen"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#0A0A0A"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat detail rekap kehadiran Anda."
                        android:textSize="12sp"
                        android:textColor="#616161"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shifting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rekapabsensi"
            android:clickable="true"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Media -->

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/work_shift" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shifting"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#0A0A0A"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat jadwal shifting mingguan Anda."
                        android:textSize="12sp"
                        android:textColor="#616161"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>






        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp">

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="@null"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/icon"/>

            <LinearLayout
                android:id="@id/biodata"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Nama"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_perusahaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Nama"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:includeFontPadding="false"
                    android:text="Nama"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="18dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="NIK"
                    android:textColor="#000000"
                    android:textSize="21dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buttonmasuk"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refresh"
            android:clickable="true"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="48dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:orientation="horizontal">

                <!-- Media -->

                <ImageView
                    android:layout_width="68sp"
                    android:layout_height="68sp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_check_in" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masuk"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="#0A0A0A"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absen Mulai Kerja"
                        android:textSize="24sp"
                        android:textColor="#616161"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buttonkeluar"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonmasuk"
            android:clickable="true"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="48dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:orientation="horizontal">

                <!-- Media -->

                <ImageView
                    android:layout_width="68sp"
                    android:layout_height="68sp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_check_out" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulang"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="#0A0A0A"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absen Selesai Kerja"
                        android:textSize="24sp"
                        android:textColor="#616161"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonkeluar"
            android:clickable="true"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="48dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Media -->

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/logout" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0A0A0A"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>




        <com.google.android.material.card.MaterialCardView
            android:id="@+id/listkaryawantkbm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="true"
            android:scaleType="fitXY"
